@model DatabaseAccess.Reservation

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Detale</h2>

        <div class="centerSmallContainer550">
            <hr />
            <div class="profileSmallRectangle2" style="background-color:rgba(255, 151, 82, 0.72);">
                dane rezerwacji
            </div>
            <div class="profileSmallRectangle2">
                NUMER REZERWACJI
                :
                @Html.DisplayFor(model => model.RESERVATION_ID)
            </div>
            <div class="profileSmallRectangle2">
                DATA ROZPOCZĘCIA ZAMÓWIENIA
                :
                @Html.DisplayFor(model => model.DATE_FROM)
            </div>
            <div class="profileSmallRectangle2">
                DATA ZAKOŃCZENIA ZAMÓWIENIA
                :
                @Html.DisplayFor(model => model.DATE_TO)
            </div>
            <div class="profileSmallRectangle2">
                DATA ZŁOŻENIA ZAMÓWIENIA
                :
                @Html.DisplayFor(model => model.ORDER_DATE)
            </div>
            <div class="profileSmallRectangle2">
                WARTOŚĆ ZAMÓWIENIA
                :
                @Html.DisplayFor(model => model.OVERALL_PRICE)
            </div>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RESERVATION_ID)

            <div class="profileSmallRectangle2" style="background-color:rgba(254, 218, 133, 0.68);">
                STATUS ZAMÓWIENIA
                <div style="width:533px;">
                @Html.DropDownList("STATUS_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.STATUS_ID, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Save" class="btn btn-default" />
                <br/>
            </div>
        }

        <hr />
            <div class="profileSmallRectangle2" style="background-color:rgba(255, 151, 82, 0.72);">
                dane użytkownika
            </div>
            <div class="profileSmallRectangle2">
                ID UŻYTKOWNIKA
                :
                @Html.DisplayFor(model => model.USER_ID)
            </div>
            <div class="profileSmallRectangle2">
                LOGIN
                :
                @Html.DisplayFor(model => model.User.LOGIN)
            </div>
            <div class="profileSmallRectangle2">
                IMIĘ
                :
                @Html.DisplayFor(model => model.User.NAME)
            </div>
            <div class="profileSmallRectangle2">
                NAZWISKO
                :
                @Html.DisplayFor(model => model.User.SURNAME)
            </div>
            <div class="profileSmallRectangle2">
                NAZWA ULICY
                :
                @Html.DisplayFor(model => model.User.UsersAdress.STREET_NAME)
            </div>
            <div class="profileSmallRectangle2">
                NUMER DOMU
                :
                @Html.DisplayFor(model => model.User.UsersAdress.STREET_NUMBER)
            </div>
            <div class="profileSmallRectangle2">
                NUMER LOKALU
                :
                @Html.DisplayFor(model => model.User.UsersAdress.POSSESION_NUMBER)
            </div>

        <hr />
            <div class="profileSmallRectangle2" style="background-color:rgba(255, 151, 82, 0.72);">
                dane produktu
            </div>
            <div class="profileSmallRectangle2">
                NAZWA
                :
                @Html.DisplayFor(model => model.Item.NAME)
            </div>
            <div class="profileSmallRectangle2">
                OPIS PRODUKTU
                :
                @Html.DisplayFor(model => model.Item.DESCRPTION)
            </div>
            <div class="profileSmallRectangle2">
                CENA(ZA DZIEŃ)
                :
                @Html.DisplayFor(model => model.Item.PRICE_PER_DAY)
            </div>
            <div class="profileSmallRectangle2">
                STATUS PRODUKTU
                :
                @Html.DisplayFor(model => model.Item.State.STATE_NAME)
            </div>
            <div class="profileSmallRectangle2">
                <a href="@Html.DisplayFor(model => model.Item.PHOTO)" target="_blank">
                    <img src="@Html.DisplayFor(model => model.Item.PHOTO)" width="500" style="border:1px solid white; margin-top:20px; margin-bottom:20px;" />
                </a>
            </div>
    </div>
</div>