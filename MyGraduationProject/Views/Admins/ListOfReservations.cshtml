@model IEnumerable<DatabaseAccess.Reservation>
@{
    ViewBag.Title = "ListOfReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RESERVATION_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE_FROM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE_TO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORDER_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OVERALL_PRICE)
        </th>
        <th>
            ITEM
        </th>
        <th>
            PURCHASER
        </th>
        <th>
            BOOKING STATUS
        </th>
        <th></th>
    </tr>



    @foreach (var r in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => r.RESERVATION_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.DATE_FROM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.DATE_TO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.ORDER_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.OVERALL_PRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.Item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.User.LOGIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.ReservationStatuse.NAME)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "DetailsOfReservation", new { id = r.RESERVATION_ID })<br />
            </td>
        </tr>
}
</table>