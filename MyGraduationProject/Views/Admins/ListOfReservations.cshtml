@model PagedList.IPagedList<DatabaseAccess.Reservation>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ListOfReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <span>BOOKING STATUS:</span>
    @Html.TextBox("BOOKINGSTATUS")
    <input type="submit" value="Szukaj" class="btn btn-default" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().RESERVATION_ID)
        </th>
        <th>
            @Html.ActionLink("DATE_FROM", "ListOfReservations", new { sorting = ViewBag.SortByDATE_FROM, BOOKINGSTATUS = ViewBag.FindBOOKINGSTATUS })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DATE_TO)
        </th>
        <th>
            @Html.ActionLink("ORDER_DATE", "ListOfReservations", new { sorting = ViewBag.SortByORDER_DATE, BOOKINGSTATUS = ViewBag.FindBOOKINGSTATUS })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OVERALL_PRICE)
        </th>
        <th>
            ITEM
        </th>
        <th>
            PURCHASER
        </th>
        <th>
            BOOKING STATUS
        </th>
        <th></th>
    </tr>

    @foreach (var r in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => r.RESERVATION_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.DATE_FROM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.DATE_TO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.ORDER_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.OVERALL_PRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.Item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.User.LOGIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => r.ReservationStatuse.NAME)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "DetailsOfReservation", new { id = r.RESERVATION_ID })<br />
            </td>
        </tr>
}
</table>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("ListOfReservations",
                    new { sorting = ViewBag.SortedBy, BOOKINGSTATUS = ViewBag.FindBOOKINGSTATUS, page }))