@model DatabaseAccess.Reservation

@{
    ViewBag.Title = "ConfirmOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="centerSmallContainer700">
    <h2>Detale</h2>
    <hr />
    <div class="profileSmallRectangle" style="background-color:#ffd674">
        dane rezerwacji
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.DATE_FROM)
        <br />
        @Html.DisplayFor(model => model.DATE_FROM)
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.DATE_TO)
        <br />
        @Html.DisplayFor(model => model.DATE_TO)
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.ORDER_DATE)
        <br />
        @Html.DisplayFor(model => model.ORDER_DATE)
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.OVERALL_PRICE)
        <br />
        @Html.DisplayFor(model => model.OVERALL_PRICE)
    </div>
    <hr />
    <div class="profileSmallRectangle" style="background-color:#ffd674">
        dane produktu
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.Item.NAME)
        <br/>
        @Html.DisplayFor(model => model.Item.NAME)
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.Item.DESCRPTION)
        <br />
        @Html.DisplayFor(model => model.Item.DESCRPTION)
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.Item.PHOTO)
        <br />
        <a href="@Html.DisplayFor(model => model.Item.PHOTO)" target="_blank">KLIK</a>
    </div>
    <div class="profileSmallRectangle">
        @Html.DisplayNameFor(model => model.Item.PRICE_PER_DAY)
        <br />
        @Html.DisplayFor(model => model.Item.PRICE_PER_DAY)
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ITEM_ID)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ORDER_DATE)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DATE_FROM)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DATE_TO)


    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Zamawiam" class="btn btn-default" /> <br />
        @Html.ActionLink("Wróć do listy produktów", "Assortment", "Index")
    </div>
}
