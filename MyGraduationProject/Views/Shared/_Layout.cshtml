<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href='https://fonts.googleapis.com/css?family=Lato:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Bree+Serif&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    <title>Michał Graczyk - Projekt Dyplomowy</title>

    <meta name="description" content="Opis w Google" />
    <meta name="keywords" content="słowa, kluczowe, wypisane, po, porzecinku" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="wrapper">
        <div class="header">
            Internetowy system wypożyczania przedmiotów
        </div>
        <div class="navigation">
            <ol>
                <li>@Html.ActionLink("Strona Główna", "Index", "Home")</li>
                @if (ViewBag.Auth != null && ViewBag.Auth.ROLE_ID == 2)
                {
                    <li>@Html.ActionLink("Profil", "Index", "Client")</li>
                    <li>@Html.ActionLink("Asortyment", "ListOfArticles", "Client")</li>
                }
                else
                {
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Asortyment", "Assortment", "Home")</li>
                }

                @if (ViewBag.Auth != null)
                {
                    <li>@Html.ActionLink("Wyloguj", "Logout", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Zaloguj", "Login", "Home")</li>
                }

                @if (ViewBag.Auth != null && ViewBag.Auth.ROLE_ID == 1)
                {
                    <li>
                        <a href="#">Opcje</a>
                        <ul>
                            <li>@Html.ActionLink("Stwórz Użytkownika", "Create", "Admins")</li>
                            <li>@Html.ActionLink("Lista Użytkowników", "Index", "Admins")</li>
                            <li>@Html.ActionLink("Dodaj Produkt", "CreateItem", "Admins")</li>
                            <li>@Html.ActionLink("Lista Produktów", "ListOfItems", "Admins")</li>
                            <li>@Html.ActionLink("Lista Zamówień", "ListOfReservations", "Admins")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                }

            </ol>
        </div>
                  
            @RenderBody()
        
        <div class="socialmedia">
            <a href="http://facebook.com" target="_blank" class="socialmedia">
                <div class="fb"><i class="icon-facebook"></i></div>
            </a>

            <a href="http://youtube.com" target="_blank" class="socialmedia">
                <div class="yt"><i class="icon-youtube"></i></div>
            </a>

            <a href="http://twitter.com" target="_blank" class="socialmedia">
                <div class="tw"><i class="icon-twitter"></i></div>
            </a>
            <div style="clear:both;"></div>
        </div>
        <div class="footer">
            Michał Graczyk - Projekt Dyplomowy &copy; 2016
        </div>
    </div>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
		$(document).ready(function() {
		var NavY = $('.nav').offset().top;

		var stickyNav = function(){
		var ScrollY = $(window).scrollTop();

		if (ScrollY > NavY) {
			$('.nav').addClass('sticky');
		} else {
			$('.nav').removeClass('sticky');
		}
		};

		stickyNav();

		$(window).scroll(function() {
			stickyNav();
		});
		});
    </script>
</body>
</html>